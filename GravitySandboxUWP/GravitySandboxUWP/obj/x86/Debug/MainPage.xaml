<Page
    x:Class="GravitySandboxUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GravitySandboxUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- Made some hacky fixes to colors of background, overlay text and buttons. All built-in UI elements changed colors from what I had in the original version, seemingly because of a new Light theme (?) -->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="White"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid x:ConnectionId='2' x:Name="backgroundGrid"                                          Background="{StaticResource appBackground}">
        <!-- TBD: ManipulationDelta="backgroundGrid_ManipulationDelta" ManipulationStarting="backgroundGrid_ManipulationStarting" ManipulationCompleted="backgroundGrid_ManipulationCompleted" -->
        <Canvas x:ConnectionId='3' x:Name="backgroundCanvas" />
        <Grid x:ConnectionId='4' x:Name="overlayGrid" >
            <Grid.RowDefinitions>
                <RowDefinition Height="88"/>
                <RowDefinition/>
                <RowDefinition Height="68" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Width="500" Orientation="Vertical" HorizontalAlignment="Left">
                <TextBlock x:ConnectionId='10' x:Name="velocityTextBlock" TextWrapping="Wrap" Text="-----" Width="500" Margin="10,5" Foreground="{StaticResource overlayTextColor}" />
                <TextBlock x:ConnectionId='11' x:Name="positionTextBlock" TextWrapping="Wrap" Text="-----" Width="500" Margin="10,5" Foreground="{StaticResource overlayTextColor}" />
                <TextBlock x:ConnectionId='12' x:Name="timeTextBlock" TextWrapping="Wrap" Text="-----" Width="500" Margin="10,5" Foreground="{StaticResource overlayTextColor}" />
            </StackPanel>
            <StackPanel Grid.Row="2" Height="48" Width="900" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:ConnectionId='5' Content="Scenario 1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="140" Margin="10,0"                                Background="{ThemeResource ButtonBackgroundThemeBrush}" BorderBrush="{ThemeResource ButtonBorderThemeBrush}" />
                <Button x:ConnectionId='6' Content="Scenario 2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="140" Margin="10,0"                                Background="{ThemeResource ButtonBackgroundThemeBrush}" BorderBrush="{ThemeResource ButtonBorderThemeBrush}" />
                <Button x:ConnectionId='7' Content="Scenario 3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="140" Margin="10,0"                                Background="{ThemeResource ButtonBackgroundThemeBrush}" BorderBrush="{ThemeResource ButtonBorderThemeBrush}" />
                <Button x:ConnectionId='8' x:Name="runPauseButton" Content="Run" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="140" Margin="10,0"                              Background="{ThemeResource ButtonBackgroundThemeBrush}" BorderBrush="{ThemeResource ButtonBorderThemeBrush}" />
                <Button x:ConnectionId='9' x:Name="stepButton" Content="Step" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="140" Margin="10,0"                          Background="{ThemeResource ButtonBackgroundThemeBrush}" BorderBrush="{ThemeResource ButtonBorderThemeBrush}" />
            </StackPanel>
        </Grid>

    </Grid>
</Page>

